										                    <p class="- topic/p ">Other Factors</p>
									                  </entry>
									                  <entry colname="2" class="- topic/entry ">
										                    <p class="- topic/p ">Contract cost risk</p>
									                  </entry>
									                  <entry colname="3" class="- topic/entry ">
										                    <p outputclass="Ctr" class="- topic/p ">0 to 7</p>
									                  </entry>
								                </row>
								                <row rowsep="1" class="- topic/row ">
									                  <entry colname="1" class="- topic/entry "/>
									                  <entry colname="2" class="- topic/entry ">
										                    <p class="- topic/p ">Capital investments</p>
									                  </entry>
									                  <entry colname="3" class="- topic/entry ">
										                    <p outputclass="Ctr" class="- topic/p ">-2 to +2</p>
									                  </entry>
								                </row>
								                <row rowsep="1" class="- topic/row ">
									                  <entry colname="1" class="- topic/entry "/>
									                  <entry colname="2" class="- topic/entry ">
										                    <p class="- topic/p ">Federal socioeconomic programs</p>
									                  </entry>
									                  <entry colname="3" class="- topic/entry ">
										                    <p outputclass="Ctr" class="- topic/p ">-.5 to +.5</p>
									                  </entry>
								                </row>
								                <row rowsep="1" class="- topic/row ">
									                  <entry colname="1" class="- topic/entry "/>
									                  <entry colname="2" class="- topic/entry ">
										                    <p class="- topic/p ">Cost-control and other past accomplishments</p>
									                  </entry>
									                  <entry colname="3" class="- topic/entry ">
										                    <p outputclass="Ctr" class="- topic/p ">-2 to +2</p>
									                  </entry>
								                </row>
								                <row rowsep="0" class="- topic/row ">
									                  <entry colname="1" class="- topic/entry "/>
									                  <entry colname="2" class="- topic/entry ">
										                    <p class="- topic/p ">Independent development and additional factors</p>
									                  </entry>
									                  <entry colname="3" class="- topic/entry ">
										                    <p outputclass="Ctr" class="- topic/p ">-2 to +2</p>
									                  </entry>
