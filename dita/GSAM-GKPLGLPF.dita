							              <thead class="- topic/thead ">
								                <row rowsep="1" class="- topic/row ">
									                  <entry colname="1" class="- topic/entry ">
										                    <p class="- topic/p "/>
									                  </entry>
									                  <entry colname="2" class="- topic/entry ">
										                    <p class="- topic/p ">Profit Factors</p>
									                  </entry>
									                  <entry colname="3" class="- topic/entry ">
										                    <p outputclass="Ctr" class="- topic/p ">
											                      <b class="+ topic/ph hi-d/b ">Weight Ranges in Percent</b>
										                    </p>
									                  </entry>
								                </row>
							              </thead>
							              <tbody class="- topic/tbody ">
								                <row rowsep="1" class="- topic/row ">
									                  <entry colname="1" class="- topic/entry ">
										                    <p class="- topic/p ">Contractor Effort</p>
									                  </entry>
									                  <entry colname="2" class="- topic/entry ">
										                    <p class="- topic/p ">Material acquisition</p>
									                  </entry>
									                  <entry colname="3" class="- topic/entry ">
										                    <p outputclass="Ctr" class="- topic/p ">1 to 4</p>
									                  </entry>
								                </row>
								                <row rowsep="1" class="- topic/row ">
									                  <entry colname="1" class="- topic/entry "/>
									                  <entry colname="2" class="- topic/entry ">
										                    <p class="- topic/p ">Conversion direct labor</p>
									                  </entry>
									                  <entry colname="3" class="- topic/entry ">
										                    <p outputclass="Ctr" class="- topic/p ">4 to 12</p>
									                  </entry>
								                </row>
								                <row rowsep="1" class="- topic/row ">
									                  <entry colname="1" class="- topic/entry "/>
									                  <entry colname="2" class="- topic/entry ">
										                    <p class="- topic/p ">Conversion related indirect cost:</p>
										                    <p class="- topic/p ">Other costs</p>
										                    <p class="- topic/p ">General management</p>
									                  </entry>
									                  <entry colname="3" class="- topic/entry ">
										                    <p outputclass="Ctr" class="- topic/p "/>
										                    <p outputclass="Ctr" class="- topic/p ">1 to 3</p>
